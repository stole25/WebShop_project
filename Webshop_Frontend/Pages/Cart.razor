@page "/cart"
@using Webshop_Frontend.Services
@inject CartService CartService

<h3>Košarica (@CartService.Items.Count)</h3>

@if (CartService.Items.Count == 0)
{
    <p>Košarica je prazna</p>
}
else
{
    <div class="cart-items">
        @foreach (var item in CartService.Items)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5>@item.Name</h5>
                    <p>@item.Price.ToString("C")</p>
                    <button @onclick="() => CartService.RemoveFromCart(item.Id)"
                            class="btn btn-danger">
                        Ukloni
                    </button>
                </div>
            </div>
        }
    </div>

    <div class="text-end">
        <h4>Ukupno: @CartService.Items.Sum(i => i.Price).ToString("C")</h4>
    </div>
}
